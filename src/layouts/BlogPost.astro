---
import Base from './Base.astro';

interface Props {
  title: string;
  description: string;
  pubDate: string;
  tag: string;
  readTime?: string;
}

const { title, description, pubDate, tag, readTime = '5 min read' } = Astro.props;

const formatted = new Date(pubDate).toLocaleDateString('en-US', {
  year: 'numeric', month: 'long', day: 'numeric'
});
---

<Base title={`${title} — YN Portfolio`} description={description}>

  <!-- Article Hero -->
  <div class="bg-forest pt-32 pb-16 px-6">
    <div class="max-w-2xl mx-auto">
      <div class="flex items-center gap-4 mb-6">
        <span class="font-mono text-[0.65rem] text-gold tracking-widest uppercase
                     bg-gold/10 border border-gold/20 px-3 py-1">
          {tag}
        </span>
        <span class="font-mono text-[0.65rem] text-warm-white/40 tracking-widest uppercase">
          {readTime}
        </span>
      </div>
      <h1 class="font-serif text-3xl md:text-5xl font-black text-warm-white leading-tight mb-6">
        {title}
      </h1>
      <p class="text-warm-white/60 text-lg font-light leading-relaxed mb-8">
        {description}
      </p>
      <div class="flex items-center gap-3 border-t border-warm-white/10 pt-6">
        <div class="w-8 h-8 rounded-full bg-gold/20 border border-gold/30 flex items-center
                    justify-center font-mono text-xs text-gold">YN</div>
        <div>
          <div class="text-warm-white/80 text-sm font-medium">Your Name</div>
          <div class="text-warm-white/40 text-xs font-mono">{formatted}</div>
        </div>
      </div>
    </div>
  </div>

  <!-- Article Body -->
  <article class="max-w-2xl mx-auto px-6 py-16">
    <div class="prose-custom">
      <slot />
    </div>

    <!-- Back link -->
    <div class="mt-16 pt-8 border-t border-mist">
      <a href="/blog" class="font-mono text-xs text-stone uppercase tracking-widest
                             no-underline hover:text-ink transition-colors">
        ← All Writing
      </a>
    </div>
  </article>

</Base>
